<!DOCTYPE html>
<html>

	<head>
		<meta charset="utf-8"/>
		<title>Even shittier</title>

        <link href="assets/style.css" rel="stylesheet">

        <script type="text/javascript" src="assets/dollardom.js"></script>
        
        <script>
            $dom.onready(() => {
                const fileInput = document.getElementById("fileInput")
                const fileDisplay = document.getElementById("fileDisplay")
                //const mimeInput = document.getElementById("mimeInput")
                $dom.addEvent(fileInput, "change", () => {
                    //console.log(fileInput.files.item(0))
                    //mimeInput.value = fileInput.files.item(0).type
                    fileDisplay.textContent = "Selected: " + fileInput.files.item(0).name
                })
            })
        </script>

	</head>

	<body>
        <form enctype="multipart/form-data" method="post" action="/">
            <input type="file" name="file" id="fileInput">
            <p id="fileDisplay">Drag your files here or click in this area.</p>
            <input type="password" name="password" placeholder="Password">
            <button type="submit">Upload</button>
        </form>
	</body>
</html>
